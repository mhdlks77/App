<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMART SOIL TESTER"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ph_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH Level:"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/ph_seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="14"
        app:layout_constraintTop_toBottomOf="@id/ph_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/auto_watering_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Auto Watering:"
        app:layout_constraintTop_toBottomOf="@id/ph_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Switch
        android:id="@+id/auto_watering_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auto_watering_text" />

    <TextView
        android:id="@+id/uv_light_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV Light:"
        app:layout_constraintTop_toBottomOf="@id/auto_watering_switch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Switch
        android:id="@+id/uv_light_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uv_light_text" />

    <TextView
        android:id="@+id/health_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Bar:"
        app:layout_constraintTop_toBottomOf="@id/uv_light_switch"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/health_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"

        app:layout_constraintTop_toBottomOf="@id/health_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
