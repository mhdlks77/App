<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#f5f5f5">

    <!-- Title TextView with larger size and extra padding -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automation and Sensor Data"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#333"
        android:paddingBottom="20dp"
        android:paddingTop="10dp" />

    <!-- Lighting Switch -->
    <Switch
        android:id="@+id/lightingSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="Lighting"
        android:textSize="24sp"
        android:textColor="#444" />

    <!-- Watering Switch -->
    <Switch
        android:id="@+id/wateringSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lightingSwitch"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:text="Watering"
        android:textSize="24sp"
        android:textColor="#444" />

    <!-- Health Bar Labels and Progress Bars Section -->
    <TextView
        android:id="@+id/lightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wateringSwitch"
        android:layout_marginTop="20dp"
        android:text="Light"
        android:textSize="20sp"
        android:textColor="#444" />

    <ProgressBar
        android:id="@+id/lightProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lightLabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:max="100"
        android:progress="0"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <TextView
        android:id="@+id/moistureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lightProgressBar"
        android:layout_marginTop="10dp"
        android:text="Moisture"
        android:textSize="20sp"
        android:textColor="#444" />

    <ProgressBar
        android:id="@+id/moistureProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/moistureLabel"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:max="100"
        android:progress="0"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <TextView
        android:id="@+id/temperatureLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moistureProgressBar"
        android:layout_marginTop="10dp"
        android:text="Temperature"
        android:textSize="20sp"
        android:textColor="#444" />

    <ProgressBar
        android:id="@+id/temperatureProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperatureLabel"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="0"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@android:drawable/progress_horizontal" />

    <!-- Data TextView with increased line spacing, padding, and larger font size -->
    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="365dp"
        android:layout_height="175dp"
        android:layout_below="@id/temperatureProgressBar"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:elevation="2dp"
        android:lineSpacingExtra="8dp"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textColor="#444"
        android:textSize="20sp" />

    <!-- Footer TextView with smaller size, centered, and added padding -->
    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataTextView"
        android:layout_centerHorizontal="true"
        android:text="Powered by Firebase"
        android:textSize="16sp"
        android:textColor="#888"
        android:paddingTop="12dp"
        android:paddingBottom="10dp" />

</RelativeLayout>
