<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Water Settings -->
    <TextView
        android:id="@+id/waterSettingsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Settings"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/waterSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"> <!-- Initially hidden -->

        <!-- Add water settings content here -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust Watering Levels"
            android:textSize="16sp"/>
        <!-- You can add other water-related settings here -->

    </LinearLayout>


    <TextView
        android:id="@+id/uvSettingsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV Settings"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/uvSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjust UV Levels"
            android:textSize="16sp"/>


    </LinearLayout>

    <!-- Notifications Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications Settings"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Low Soil Moisture -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Soil Moisture"
        android:textSize="16sp"/>

    <SeekBar
        android:id="@+id/lowSoilMoistureSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <!-- Watering -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watering"
        android:textSize="16sp"/>

    <SeekBar
        android:id="@+id/wateringSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <Switch
        android:id="@+id/wateringSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Watering Notifications" />

    <!-- UV -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UV"
        android:textSize="16sp"/>

    <SeekBar
        android:id="@+id/uvSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>

    <!-- Theme -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textSize="16sp"/>

    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode" />

</LinearLayout>
